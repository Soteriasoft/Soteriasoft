doctype html
head
    title teste
    meta(charset='utf-8')

    script(src='https://cdnjs.cloudflare.com/ajax/libs/vue/2.5.13/vue.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/vue-resource/1.3.4/vue-resource.min.js')
    script(src="https://cdn.jsdelivr.net/npm/axios@0.12.0/dist/axios.min.js")

#vue_app
    span(v-bind:title='message')
        | Pare o mouse sobre mim e veja a dica interligada dinamicamente!
    br
    br
    br
    table.table.table-bordered
        tr(v-for="issue in issues")
            td {{issue.codigo}}
            td {{issue.nome}}
                
    br
    br
    br
    table.table.table-bordered
        tr(v-for="tes in teste")
            td {{tes.codigo}}
            td {{tes.nome}}

    script.
        var vue_app = new Vue({
            el:"#vue_app",
            data: {message: 'Você carregou esta página em ' + new Date().toLocaleString(), 
            issues:[], teste:[]},
            created: function() {
                this.$http.get("/estado/estado_nome")
                .then((response)=>{
                    this.issues=response.body.cis
                })

                axios.get('/estado/estado_nome')
                .then(function (response) {
                    vue_app.teste = response.data.cis
                })
            }
        })
