doctype html
html
  head
    title simple-grid demo
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    // Latest compiled and minified CSS
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css')
    // Optional theme
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap-theme.min.css')
    link(rel='stylesheet', href='css/simple-grid.css')
    style(type='text/css').
      code {
      margin: 10px;
      display:block;
      overflow:auto;
      }
      .grid-container {
      height: 340px; overflow-y: auto;
      }
      .grid-container table {
      margin: 0;
      }
  body(ng-app='demo')
    .container
      script(type='text/ng-template', id='simple-grid.html', src='js/simple-grid.html')
      
      div(ng-controller='MainCtrl')
        .row          
          div(ng-form='gridForm')
            h3
              | Resulting Grid 
              small Modified? {{ gridForm.$pristine ? 'No' : 'Yes' }}
            .grid-container(simple-grid='gridConfig')
          div(style='text-align:center')
            | Page: {{ gridConfig.options.pageNum + 1 }}
            .btn-group
              button.btn.btn-sm.btn-primary(type='button', ng-click='movePage(-1)')
                | < Prev
              button.btn.btn-sm.btn-primary(type='button', ng-click='movePage(1)')
                | > Next
            .btn-group
              button.btn.btn-sm.btn-success(type='button', ng-click='addRow()') Add row
              button.btn.btn-sm.btn-danger(type='button', ng-click='filterDeleted(gridConfig.getData())') Remove deleted rows
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.6/angular.js')
    script(src='js/simple-grid.js')
    script(src='js/teste.js')
