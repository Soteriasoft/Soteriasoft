html(lang='pt-br')
  head
    meta(name='viewport', content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimal-ui')
    link(rel='stylesheet', href='http://ajax.googleapis.com/ajax/libs/angular_material/1.1.0/angular-material.min.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.6/css/bootstrap.css')
    link(rel='stylesheet', href='css/usuario.css')
    
    script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular.min.js')
    script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-animate.min.js')
    script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-aria.min.js')
    script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-messages.min.js')
    script(src='http://ajax.googleapis.com/ajax/libs/angular_material/1.1.0/angular-material.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.5/js/bootstrap.min.js')
    script(src='js/comum.js')
    script(src='js/usuario.js')

  body
    md-content(ng-controller='Soteriasoft.Control as ctrl', ng-app='Soteriasoft')
      md-card
        md-card-title
          md-card-title-text
            span.md-headline Cadastro de Usuarios
            //span.md-subhead ...... .... ....
        md-card-content
          form(name='formuser', ng-submit='update(formuser.$valid)', novalidate='')

            div(layout-gt-sm='row')
              md-input-container(flex='')
                label Usuario
                input(ng-model='usuario', type='text')

            div(layout-gt-sm='row')
              md-input-container(flex='')
                label Senha
                input(name='senha', ng-model='senha', type='password', ng-required='true')
                
            div(layout-gt-sm='row')
              md-input-container(flex='')
                label Confirmar Senha
                input(ng-model='csenha', data-rule-equalto='#senha', 
                type='password', ng-required='true')
                
            div(flex="")
              md-input-container 
                md-radio-group(layout-gt-sm='row', ng-model='tipo')
                  md-radio-button.md-primary(value=2) Operacional 
                  md-radio-button.md-primary(value=1) Administrador

            div(layout="row", layout-sm="column", flex="")
              md-autocomplete(flex='',
                md-selected-item='pessoa',
                md-min-length='3', 
                md-search-text='SearchPes', 
                md-items='item in PessoaNome(SearchPes)',
                md-floating-label='Pessoa',
                md-item-text='item.nome')
                md-item-template
                  span(md-highlight-text='SearchPes') {{item.nome}}

              md-button.md-icon-button.launch(href="pessoa?codigo={{proprietario.codigo}}", style='margin-top: 20px',
              title="Abrir cadastro de pessoas", target="_blank", aria-label="Google.com")
                md-icon(md-svg-icon="img/people.svg")

          div(layout-gt-sm='row', layout-align='start', flex='')
            md-button.md-raised(ng-click='Limpar(true)') Novo
            md-button.md-raised.md-primary(ng-click='Gravar()',
            ng-disabled='usuario.length<9 || usuario==undefined || estado==undefined || cidade==undefined || bairro==undefined || endereco==undefined',) Gravar
            md-button.md-raised.md-warn.md-hue-1(ng-click='Apagar()',
            ng-disabled='usuario.length<9 || usuario==undefined || estado==undefined || cidade==undefined || bairro==undefined || endereco==undefined') Apagar
            md-button.md-raised.md-primary.md-hue-3(ng-click='Localizar()') Localizar